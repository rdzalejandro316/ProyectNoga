                        <SiaSf:ComboBoxAdv FontSize="12" x:Name="comboBoxEmpresas" Margin="5" AllowMultiSelect="True" Grid.ColumnSpan="2" Grid.Column="3" Grid.Row="4" Width="180" HorizontalAlignment="Left" DefaultText="Seleccione la empresa" DisplayMemberPath="businessname"  SelectedValuePath="businesscode"  SelectedValueDelimiter=","/>

                        <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Grid.Column="2" Grid.Row="7" Name="BtnEjecutar" Command="{Binding RegisterCommand}" CommandParameter="{Binding ElementName=BtnEjecutar}" Click="BtnEjecutar_Click" Style="{StaticResource botones}" Content="Consultar"/>
                                <Button Grid.Column="3" Grid.Row="7" Foreground="WhiteSmoke" Name="BtnSalir" Click="BtnSalir_Click" Style="{StaticResource botones}" Content="Salir"/>
                            </StackPanel>
                        </Grid>



                    </Grid>

                </Grid>
                <Grid Grid.Row="1" >
                </Grid>

