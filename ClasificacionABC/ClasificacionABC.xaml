                            <SiaSf:SfDataGrid.Columns>
                                <SiaSf:GridTextColumn HeaderText="Referencia" MappingName="cod_ref" Width="100" />
                                <SiaSf:GridTextColumn HeaderText="Nombre Producto" MappingName="nom_ref" Width="180"  />
                                <SiaSf:GridTextColumn HeaderText="Cod Lin" MappingName="cod_tip" Width="70" />
                                <SiaSf:GridTextColumn HeaderText="Linea" MappingName="nom_tip" Width="100">
                                    <!--<SiaSf:GridTextColumn.HeaderTemplate>
