                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Suma Subtotal: " Grid.Row="0" Style="{StaticResource title}"/>
                            <Viewbox Stretch="Uniform" Grid.Row="1">
                                <TextBlock x:Name="Tb2_Total3" Text="{Binding StringFormat=c}" Grid.Row="1" Style="{StaticResource value}" />
                            </Viewbox>
                        </Grid>
                    </Border>

                    <Border Grid.Column="4" Style="{StaticResource borde}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Suma Subtotal: " Grid.Row="0" Style="{StaticResource title}"/>
                            <Viewbox Stretch="Uniform" Grid.Row="1">
                                <TextBlock x:Name="Tb2_Total4" Text="{Binding StringFormat=c}" Grid.Row="1" Style="{StaticResource value}" />
                            </Viewbox>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Column="5" VerticalAlignment="Center">
                        <Button Name="Tb2_BtnExport" Content="Exportar Consulta a Xls"  Click="Tb2_BtnExport_Click" Tag="1" Grid.Column="5" Cursor="Hand" Style="{StaticResource botones-menu}"  Width="150"/>
                        <Button Name="Tb2_BtnHidden" Content="Ocultar Graficos"  Click="Tb2_BtnHidden_Click" Tag="0" Grid.Column="5" Cursor="Hand" Style="{StaticResource botones-menu}" Background="#373737" Width="150"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Name="Tb2_GridSpan" Margin="5" >


                    <SiaSf:SfDataGrid Grid.RowSpan="2" FrozenColumnCount="2" AllowResizingColumns="True" Grid.Row="1" x:Name="Tb2_GridClasific"  EnableDataVirtualization = "True" AutoGenerateColumns="False" ShowGroupDropArea="True" FontSize="10" AllowFiltering="True" Margin="5" Tag="1"  RowSelectionBrush="#7FFFA500" HeaderStyle="{StaticResource headerStyle}" FilterChanged="VentasPorProducto_FilterChanged">
                        <SiaSf:SfDataGrid.Columns>
                            <SiaSf:GridTextColumn HeaderText="Emp" MappingName="cod_emp" Width="55" />
                            <SiaSf:GridTextColumn HeaderText="Nombre Empresa" MappingName="nom_emp" Width="100"/>
                            <SiaSf:GridTextColumn HeaderText="Bod" MappingName="cod_bod" Width="50" />
                            <SiaSf:GridTextColumn HeaderText="Bodega" MappingName="nom_bod" Width="100"/>
                            <SiaSf:GridTextColumn HeaderText="Linea" MappingName="cod_tip" Width="50" />
                            <SiaSf:GridTextColumn HeaderText="Nombre Linea" MappingName="nom_tip" Width="100"/>
                            <SiaSf:GridTextColumn HeaderText="Provedor" MappingName="cod_prv" Width="65"/>
                            <SiaSf:GridTextColumn HeaderText="Codigo" MappingName="cod_ref" Width="100" />
                            <SiaSf:GridTextColumn HeaderText="Nombre Producto" MappingName="nom_ref" Width="180" />
                            <SiaSf:GridNumericColumn HeaderText="Tot Cnt Grup" MappingName="totcntgrup" Width="100" NumberDecimalDigits="2"/>
                            <SiaSf:GridNumericColumn HeaderText="Tot Cnt Emp" MappingName="totcntemp" Width="100" NumberDecimalDigits="2"/>
                            <SiaSf:GridNumericColumn HeaderText="Tot Cnt Gru Ref" MappingName="totcntgrupref" Width="100" NumberDecimalDigits="2"/>
                            <SiaSf:GridNumericColumn HeaderText="Tot Cnt Emp Ref" MappingName="totcntempref" Width="100" NumberDecimalDigits="2"/>
                            <SiaSf:GridNumericColumn HeaderText="Tot Cnt Emp Ref Bod" MappingName="totcntemprefbod" Width="100" NumberDecimalDigits="2"/>
                            <SiaSf:GridNumericColumn HeaderText="Vta Cnt Par Emp Ref" MappingName="vta_cntparempref" Width="100" NumberDecimalDigits="2"/>
                            <SiaSf:GridNumericColumn HeaderText="vta Cnt Par Emp Bod" MappingName="vta_cntparemprefbod" Width="100" NumberDecimalDigits="2"/>
                            <SiaSf:GridCurrencyColumn HeaderText="Tot Subemp" MappingName="totsubemp" Width="100"/>

                        </SiaSf:SfDataGrid.Columns>

                    </SiaSf:SfDataGrid>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid Grid.Row="3"  Grid.ColumnSpan="2"   >
                        <Grid.Resources>
                            <DataTemplate x:Key="headerTemplate">
                                <TextBlock FontSize="12" Foreground="Black" Margin="5" Text="{Binding}"/>
                            </DataTemplate>
                            <DataTemplate x:Key="labelTemplate">
                                <TextBlock FontSize="10" Foreground="Orange"  Margin="1" Text="{Binding Path=LabelContent}"/>
                            </DataTemplate>
                            <Style TargetType="Line" x:Key="AxisStyle">
                                <Setter Property="Stroke" Value="DarkGray"  />
                                <Setter Property="StrokeThickness" Value="1"/>
                            </Style>
                        </Grid.Resources>

                        <chart:SfChart x:Name="Chart2" AreaBorderThickness="0,1,1,0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
                            <chart:SfChart.Header>
                                <TextBlock FontSize="10" FontFamily="Segoe UI" Foreground="Orange" Margin="0,0,0,5">Cantidad Total por empresa</TextBlock>
                            </chart:SfChart.Header>
                            <chart:SfChart.PrimaryAxis>
                                <SiaSf:CategoryAxis Header="Empresas" FontSize="10" Foreground="Orange" PlotOffset="30" LabelTemplate="{StaticResource labelTemplate}" HeaderTemplate="{StaticResource headerTemplate}" AxisLineStyle="{StaticResource AxisStyle}" MajorTickLineStyle="{StaticResource AxisStyle}"/>
                            </chart:SfChart.PrimaryAxis>
                            <SiaSf:SfChart.SecondaryAxis>
                                <SiaSf:NumericalAxis Foreground="Orange" Header="Total" HeaderTemplate="{StaticResource headerTemplate}"   LabelTemplate="{StaticResource labelTemplate}"  AxisLineStyle="{StaticResource AxisStyle}"  MajorTickLineStyle="{StaticResource AxisStyle}"/>
                            </SiaSf:SfChart.SecondaryAxis>


                            <chart:AreaSeries  Name="Tb2_chartEmpCnt" XBindingPath="nom_emp"  YBindingPath="totcntemp" Interior="Orange" ShowTooltip="True" EnableAnimation="True" AnimationDuration="00:00:03">
                                <chart:AreaSeries.AdornmentsInfo>
                                    <chart:ChartAdornmentInfo AdornmentsPosition="Bottom"  HorizontalAlignment="Center" VerticalAlignment="Center" ShowLabel="True">
                                        <chart:ChartAdornmentInfo.LabelTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Ellipse Height="30" Width="30" Stroke="Gray" Fill="Orange" StrokeThickness="2"  HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding}" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI"  FontSize="12"/>
                                                </Grid>
                                            </DataTemplate>
                                        </chart:ChartAdornmentInfo.LabelTemplate>
                                    </chart:ChartAdornmentInfo>
                                </chart:AreaSeries.AdornmentsInfo>
                            </chart:AreaSeries>

                        </chart:SfChart>
                    </Grid>
                </Grid>

            </Grid>
        </SiaSf:TabItemExt>


    </SiaSf:TabControlExt>

</UserControl>
